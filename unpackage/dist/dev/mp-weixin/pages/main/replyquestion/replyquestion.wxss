.u-tri::before {
	position: absolute;
	right: -4px;
	top: 5px;
	content: '';
	width: 20px;
	height: 20px;
	border-style: solid;
	border-width: 2px;
	border-color: white;
	border-radius: 6px;
	background-color: white;
